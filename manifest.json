{
  "manifest_version": 3,
  "name": "Discord Friends Graph",
  "version": "1.0.0",
  "description": "Display mutual connections and mutual servers with your friends on discord. All data stays local.",
  "permissions": ["storage", "scripting", "downloads"],
  "host_permissions": ["https://discord.com/*", "https://cdn.discordapp.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}
